<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ldBkAddBank.AddBankAccountInfoActivity">

    <LinearLayout
        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:background="@drawable/bg_header_bottom_rounded"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/header_back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_back" />


                <TextView
                    android:id="@+id/txt_title"
                    style="@style/medium_poppins_text_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/header_back"
                    android:gravity="center_vertical"
                    android:text="@string/account_detail"
                    android:textColor="@android:color/white" />

                <RelativeLayout
                    android:id="@+id/layout_lp_notify"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/bg_round_for_header"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/ic_bell_icon_new" />

                    <TextView
                        android:id="@+id/txt_lp_notify"
                        style="@style/vvsmall_poppins_text_wrap"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_minus2sdp"
                        android:background="@drawable/bg_small_circle_red"
                        android:gravity="center"
                        android:paddingTop="@dimen/_1sdp"
                        android:text="@string/text_zero"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_step_1"
                    style="@style/small_poppins_text_wrap"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:background="@drawable/ic_ellipse_white_fill"
                    android:gravity="center"
                    android:text="@string/text_one"
                    android:textColor="@color/colorPrimaryDarker"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_step_2"
                    android:layout_toRightOf="@id/tv_step_1"
                    android:background="@drawable/ic_blue_line" />

                <TextView
                    android:id="@+id/tv_step_2"
                    style="@style/small_poppins_text_wrap"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_ellipse_blue_fill"
                    android:gravity="center"
                    android:text="@string/text_two"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_step_3"
                    android:layout_toRightOf="@id/tv_step_2"
                    android:background="@drawable/ic_blue_line" />

                <TextView
                    android:id="@+id/tv_step_3"
                    style="@style/small_poppins_text_wrap"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/ic_ellipse_blue_fill"
                    android:gravity="center"
                    android:text="@string/text_three"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_step_1_title"
                    style="@style/vvsmall_poppins_text_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/text_property_info"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_step_2_title"
                    style="@style/vvsmall_poppins_text_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/text_unit_info"
                    android:textColor="@color/colorPrimaryDarker"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_step_3_title"
                    style="@style/vvsmall_poppins_text_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="@string/text_broker_info"
                    android:textColor="@color/colorPrimaryDarker"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">


                <ImageView
                    android:id="@+id/img_app"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/logo" />

                <params.com.stepprogressview.StepProgressView
                    android:id="@+id/step_prog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:currentProgress="2"
                    app:markerColor="@android:color/white"
                    app:markerWidth="3dp"
                    app:markers="1,2,3"
                    app:progressColor="@color/colorBlurText"
                    app:textColor="@color/white"
                    app:textMargin="5dp"
                    app:textSize="11sp"
                    app:totalProgress="3" />

                <LinearLayout
                    android:id="@+id/ll_bank_details_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorLightGrey"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"

                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_baseline_info_24" />

                    <TextView
                        style="@style/small_text_wrap"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"

                        android:text="Bank Account is mandatory to receive rents from the Tenant"
                        android:textColor="@color/black_trans" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bank_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_bnk_usr_name"
                            style="@style/small_text_match"
                            android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ- 0123456789"
                            android:hint="@string/acc_ame"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="70"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:endIconDrawable="@drawable/ic_password_eye"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_account"
                            style="@style/vsmall_poppins_text_match"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="@string/bnk_account_no"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="16"
                            android:maxLines="1"

                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_cnfm_account"
                            style="@style/vsmall_poppins_text_match"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="@string/cnfm_bnk_account_no"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:longClickable="false"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText"
                            android:textIsSelectable="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:endIconDrawable="@drawable/ic_password_eye"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_routing"
                            style="@style/vsmall_poppins_text_match"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:hint="@string/routing_no"
                            android:imeOptions="actionDone"
                            android:inputType="numberPassword"
                            android:maxLength="9"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_account_nxt"
                    style="@style/xsmall_poppins_text_match"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/blue_border"
                    android:text="@string/next"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>