<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/userypecard"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"

                app:cardBackgroundColor="#FCFEFF"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!--
                                <TextView
                                    android:layout_below="@+id/img_app"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:gravity="left"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:text="Sign Up for free account"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/black"/>
                    -->

                    <LinearLayout
                        android:id="@+id/layout_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <LinearLayout
                            android:id="@+id/usertypelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/landlord_selector"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/landlord_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="#F4FAFF"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/landlord_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/reg_landlord_blue">

                                    </ImageView>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/landlord_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="LandLord"
                                    android:textColor="#2D3748"
                                    android:textSize="@dimen/_9sdp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tenant_selector"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/tenant_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="#F4FAFF"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/tenant_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/reg_tenant_blue">

                                    </ImageView>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/tenant_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="Tenant"
                                    android:textColor="#2D3748"
                                    android:textSize="@dimen/_9sdp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/broker_selector"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/broker_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="#F4FAFF"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/broker_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/reg_broker_blue">

                                    </ImageView>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/broker_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="Broker"
                                    android:textColor="#2D3748"
                                    android:textSize="@dimen/_9sdp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/agent_selector"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/agent_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2"
                                    app:cardBackgroundColor="#F4FAFF"
                                    app:cardCornerRadius="@dimen/_5sdp">

                                    <ImageView
                                        android:id="@+id/agent_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_5sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/reg_agent_blue">

                                    </ImageView>


                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/agent_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="Agent"
                                    android:textColor="#2D3748"
                                    android:textSize="@dimen/_9sdp">

                                </TextView>

                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_licence_number"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_reg_licence"
                                style="@style/vsmall_poppins_text_match"
                                android:digits="0123456789"
                                android:drawablePadding="@dimen/_8sdp"
                                android:inputType="number"
                                android:maxLength="11"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textColorHint="@color/colorCommonText" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_google"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/ic_google" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/im_fb"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_fb"
                                android:visibility="visible" />

                            <!--<de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_twitter"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic__34708_twitter_icon"/>-->

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_apple"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_apple" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/userypecard"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"

                app:cardBackgroundColor="#FCFEFF"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_first_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_first_name"
                            style="@style/vsmall_poppins_text_match"
                            android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ-@. 0123456789"
                            android:drawablePadding="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat"
                            android:hint="First Name"
                            android:inputType="textCapWords"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_last_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_last_name"
                            style="@style/vsmall_poppins_text_match"
                            android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ-@. 0123456789"
                            android:drawablePadding="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Last Name"
                            android:inputType="textCapWords"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_email"
                            style="@style/vsmall_poppins_text_match"
                            android:digits="aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ-@. 0123456789"
                            android:drawablePadding="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/email_add"
                            android:inputType="textEmailAddress"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorCommonText" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_layout_pswrd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:endIconDrawable="@drawable/ic_password_eye"
                        app:endIconMode="password_toggle"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorReportRed"
                        app:passwordToggleTint="@color/black_trans">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_pwd"
                            style="@style/vsmall_poppins_text_match"
                            android:drawablePadding="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_layout_confirm_pswrd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:endIconDrawable="@drawable/ic_password_eye"
                        app:endIconMode="password_toggle"
                        app:errorEnabled="true"
                        app:errorTextColor="@color/colorReportRed"
                        app:passwordToggleTint="@color/black_trans">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_reg_confirm_pwd"
                            style="@style/vsmall_poppins_text_match"
                            android:drawablePadding="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat"
                            android:hint="@string/confirm_password"
                            android:inputType="textPassword"
                            android:maxLength="70"
                            android:singleLine="true"
                            android:textColor="@color/black"/>
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_termcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/colorLightGrey" />


                        <TextView
                            android:id="@+id/txt_term_condition"
                            style="@style/small_text_match"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:text="@string/agree2"
                            android:textColor="@color/colorCommonText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_more_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/colorLightGrey" />


                        <TextView
                            style="@style/small_text_match"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat"
                            android:gravity="left"
                            android:text="@string/send_me"
                            android:textColor="@color/colorCommonText" />
                    </LinearLayout>

                    <TextView
                        style="@style/small_text_match"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="start"
                        android:text="*Free account supports creation of up to 4 unit of your property for 6 months."
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_signup"
                        style="@style/xsmall_poppins_text_match"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/btn_dk_blue_round_new"
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/txt_signin"
                        style="@style/small_text_match"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_55sdp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="start"
                        android:text="@string/already_have_an_account_sign_in_now"
                        android:textColor="@color/colorCommonText"
                        android:visibility="visible" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:background="@drawable/ic_header_bg">

                <TextView
                    android:id="@+id/tv_login"
                    style="@style/small_poppins_text_match"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/create_account"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/small_poppins_text_match"
                    android:layout_below="@+id/tv_login"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/free_account_supports_creation_of_up_to_4_units_of_your_property_for_6_months"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


