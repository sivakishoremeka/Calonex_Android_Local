<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".tenant.activity.TenantLeaseAgreementActivity">

    <RelativeLayout
        android:id="@+id/lease_agree_top_View"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Lease Agreement"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lease_agree_bottom_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/lease_agree_action_reject"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_border"
                android:gravity="center"
                android:text="@string/reject"
                android:textColor="@color/colorLightRed"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lease_agree_action_accept"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/blue_border"
                android:gravity="center"
                android:text="@string/accept"
                android:textColor="@color/colorLightGreen"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lease_agree_bottom_View"
        android:layout_below="@+id/lease_agree_top_View"
        android:layout_marginBottom="@dimen/_12sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/bg_white_2_round_new"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">


            <TextView
                style="@style/small_text_wrap"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/lease_agree_heading"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_table_body"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/small_text_wrap"
                        android:text="@string/text_land_lord_name"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_agreement_landlord_name"
                        style="@style/small_text_wrap"

                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/small_text_wrap"
                            android:text="@string/text_rent_per_month_title"
                            android:textColor="@color/black_trans" />

                        <TextView
                            android:id="@+id/lease_agreement_rent_per_month"
                            style="@style/small_text_wrap"
                            android:layout_alignParentEnd="true"

                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/small_text_wrap"
                            android:text="@string/text_security_deposit"
                            android:textColor="@color/black_trans" />

                        <TextView
                            android:id="@+id/lease_agreement_security_deposit"
                            style="@style/small_text_wrap"
                            android:layout_alignParentEnd="true"

                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/small_text_wrap"
                            android:text="@string/text_lease_duration_title"
                            android:textColor="@color/black_trans" />

                        <TextView
                            android:id="@+id/lease_agreement_lease_duration"
                            style="@style/small_text_wrap"
                            android:layout_alignParentEnd="true"

                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/small_text_wrap"
                            android:text="@string/text_discounts"
                            android:textColor="@color/black_trans" />

                        <TextView
                            android:id="@+id/lease_agreement_discount"
                            style="@style/small_text_wrap"
                            android:layout_alignParentEnd="true"

                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/small_text_wrap"
                        android:text="@string/late_fee"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_agreement_late_fee"
                        style="@style/small_text_wrap"
                        android:layout_alignParentEnd="true"

                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/small_text_wrap"
                        android:text="@string/lease_start_date"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_agreement_lease_start_date"
                        style="@style/small_text_wrap"
                        android:layout_alignParentEnd="true"

                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/small_text_wrap"
                        android:text="@string/months_free"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_agreement_months_free"
                        style="@style/small_text_wrap"
                        android:layout_alignParentEnd="true"

                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/small_text_wrap"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Tenants"
                android:textColor="@color/black_trans"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lease_agreement_tenant_details_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <TextView
                style="@style/small_text_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/sample_lease"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/lease_agreement_progress"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>