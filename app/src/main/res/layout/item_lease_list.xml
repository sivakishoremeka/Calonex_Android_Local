<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_12sdp"
    android:background="@drawable/top_shadow_bg"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/view_lease_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp">

            <ImageView
                android:id="@+id/img_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1.6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lease_list_property_address"
                    style="@style/small_text_wrap"
                    android:layout_gravity="start"
                    android:fontFamily="@font/montserrat_font"
                    android:text="Address"
                    android:textColor="@android:color/black" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/darker_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/vsmall_poppins_text_wrap"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_no"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_list_unit_number"
                        style="@style/vvsmall_poppins_text_match"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="N/A"
                        android:textColor="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/vsmall_poppins_text_wrap"
                        android:layout_height="wrap_content"
                        android:text="Lease Status"
                        android:textColor="@color/black_trans" />

                    <TextView
                        android:id="@+id/lease_list_status"
                        style="@style/vvsmall_poppins_text_match"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="N/A"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/vsmall_poppins_text_wrap"
                    android:text="@string/landlord_name"
                    android:textColor="@color/black_trans" />

                <TextView
                    android:id="@+id/lease_list_landlord_name"
                    style="@style/vvsmall_poppins_text_match"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="N/A"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/vsmall_poppins_text_wrap"
                    android:text="@string/rent_info"
                    android:textColor="@color/black_trans" />

                <TextView
                    android:id="@+id/lease_list_rent_amount"
                    style="@style/vvsmall_poppins_text_match"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="N/A"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/vsmall_poppins_text_wrap"
                    android:text="Status"
                    android:textColor="@color/black_trans" />

                <TextView
                    style="@style/vvsmall_poppins_text_match"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="N/A"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_arrow_right"
                android:padding="@dimen/_2sdp"
                app:tint="@color/black_trans"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@android:color/darker_gray" />


    </LinearLayout>
</androidx.cardview.widget.CardView>