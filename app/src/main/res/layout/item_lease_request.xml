<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_item_lr_unit_nmbr"
                style="@style/vvsmall_poppins_text_wrap"
                android:ellipsize="end"
                android:textSize="@dimen/_9ssp"
                android:lines="1"
                android:text="@string/na"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_item_lr_tenant_name"
                style="@style/vvsmall_poppins_text_wrap"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_9ssp"
                android:text="@string/na"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_item_lr_date_req"
                style="@style/vvsmall_poppins_text_wrap"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/na"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_item_lr_brkr_agent"
                style="@style/vvsmall_poppins_text_wrap"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/na"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_item_lr_lease_status"
                style="@style/vvsmall_poppins_text_wrap"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_9ssp"
                android:text="@string/na"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_item_lr_rent_amt"
                style="@style/vvsmall_poppins_text_wrap"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:textSize="@dimen/_9ssp"
                android:lines="1"
                android:text="@string/na"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/txt_item_lr_lease_duration"
                style="@style/vvsmall_poppins_text_wrap"
                android:layout_marginTop="@dimen/_5sdp"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/_9ssp"
                android:text="@string/na"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
