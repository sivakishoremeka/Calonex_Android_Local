<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".landlord.activity.UploadLeasingDocScreen">

    <LinearLayout

        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        android:padding="16dp">

    <TextView
        style="@style/small_text_wrap"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_rc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border"
        android:textColor="@color/white"
        android:padding="@dimen/_5sdp"
        android:text="@string/upload_lease_doc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/img_dot_corner">
        <TextView
            style="@style/medium_text_wrap"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:drawableBottom="@android:drawable/ic_input_add"
            android:drawableTint="@color/colorPrimary"/>


    </RelativeLayout>

        <GridView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>