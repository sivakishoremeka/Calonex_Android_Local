<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">


    <TextView
        android:id="@+id/txt_unit_number"
        style="@style/small_text_match"
        android:text="Unit #502"
        android:textColor="@color/colorPrimaryDark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                style="@style/vvsmall_poppins_text_match"
                android:text="@string/tenant_nme"
                android:textColor="@color/black_trans" />
            <TextView
                android:id="@+id/txt_tenant_name"
                style="@style/vsmall_poppins_text_match"
                android:text="Rahul"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView

                style="@style/vvsmall_poppins_text_match"
                android:text="@string/lst_paymnt"
                android:textColor="@color/black_trans" />

            <TextView
                android:id="@+id/txt_last_payment_date"
                style="@style/vsmall_poppins_text_match"
                android:text="10/03/2020"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/vvsmall_poppins_text_match"
                android:text="@string/rent_due"
                android:textColor="@color/black_trans" />
            <TextView
                android:id="@+id/txt_rent_due_status"
                style="@style/vsmall_poppins_text_wrap"
                android:textColor="@color/black"
                android:text="No"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/vvsmall_poppins_text_match"
                android:text="@string/paymnt_due"
                android:textColor="@color/black_trans" />
            <TextView
                android:id="@+id/txt_payment_due"
                style="@style/vsmall_poppins_text_wrap"
                android:text="N/A"
                android:textColor="@color/black"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>