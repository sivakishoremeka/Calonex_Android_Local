<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/bg_rounded_for_cx_message"
    android:gravity="center_vertical"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_usr"
                    style="@style/vsmall_poppins_text_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:background="@drawable/circle_blue"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="RT"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_frm_usr"
                    style="@style/medium_poppins_text_wrap"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/circle_blue"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:text="BS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/vsmall_poppins_text_match"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_16sdp"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:lines="1"
                            android:text="@string/text_priority" />

                        <TextView
                            android:id="@+id/txt_msg_prioroty"
                            style="@style/vsmall_poppins_text_match"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_16sdp"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_msg_sub"
                        style="@style/vsmall_poppins_text_match"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/na"
                        android:textColor="@color/colorBlueText"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_msg"
                    style="@style/vsmall_poppins_text_match"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/na"
                    android:textColor="@color/colorDarkGrayText"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/txt_msg_time"
                    style="@style/vvsmall_poppins_text_wrap"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <View
                android:id="@+id/view_priority"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:src="@drawable/ic_arrow_right"
                android:visibility="gone"
                app:tint="@color/colorCommonText" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>