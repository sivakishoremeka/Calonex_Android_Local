<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landlord.activity.UnitAddActivity"
    tools:ignore="MissingDefaultResource"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txt_title"
            style="@style/medium_poppins_text_match"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="@string/add_new_unit"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/_8sdp"
            android:textColor="@android:color/white"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/small_text_wrap"
                    android:layout_gravity="center"
                    android:text="@string/unit_desc"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/units_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp" />

                <Button
                    android:id="@+id/add_unit_finish"
                    style="@style/xsmall_poppins_text_match"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:background="@drawable/blue_border"
                    android:text="@string/finish"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unit_add_skip"
                    style="@style/small_text_wrap"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/skip_for_now"
                    android:textColor="@color/colorBlurText"
                    android:background="@drawable/blue_border"
                    android:textStyle="bold" />

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>