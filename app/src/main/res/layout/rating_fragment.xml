<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/landlord_rating_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />

    <RatingBar
        android:id="@+id/rating_landlord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/ratingBarStyleSmall"
        android:visibility="visible"
        android:stepSize="1"
        android:layout_margin="@dimen/_16sdp"
        android:numStars="10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rating_star_parent_full"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/rating_star_parent_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal" />

    </LinearLayout>

    <TextView
        android:id="@+id/chart1"
        style="@style/small_text_wrap"
        android:gravity="center"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Your Overall Average Rating by Tenants" />



</LinearLayout>