<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_margin="@dimen/_2sdp"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


            <TextView
                style="@style/vvsmall_poppins_text_match"
                android:text="@string/agent_name2"
                android:textColor="@color/black_trans"/>


            <TextView
                android:id="@+id/link_property_name"
                style="@style/vsmall_poppins_text_match"
                android:text="@string/na"
                android:layout_gravity="center"
                android:textColor="@color/black"/>

            <TextView
                style="@style/vvsmall_poppins_text_match"
                android:text="@string/agent_licence_no1"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black_trans"/>

            <TextView
                android:id="@+id/link_property_requested_by_name"
                style="@style/vsmall_poppins_text_match"
                android:text="@string/na"
                android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/ll_agnet_broker_details"
                android:layout_weight="1.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_10sdp">

                <TextView
                    style="@style/vvsmall_poppins_text_wrap"
                    android:text="@string/location"
                    android:textColor="@color/black_trans"/>

                <TextView
                    android:id="@+id/link_property_requested_by_id"
                    style="@style/vsmall_poppins_text_wrap"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/na"
                    android:textColor="@color/black"/>

            </LinearLayout>




            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                android:layout_marginStart="@dimen/_10sdp"
                >

                <TextView
                    style="@style/vvsmall_poppins_text_wrap"
                    android:text="@string/request_date"
                    android:textColor="@color/black_trans"/>

                <TextView
                    android:id="@+id/link_property_req_date"
                    style="@style/small_text_wrap"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/na"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btn_reject"
                    style="@style/small_text_wrap"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/reject"
                    android:layout_margin="@dimen/_6sdp"
                    android:textColor="@color/colorLightRed"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_accept"
                    style="@style/small_text_wrap"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:layout_margin="@dimen/_6sdp"
                    android:text="@string/accept"
                    android:textColor="@color/colorLightGreen"
                    android:textStyle="bold" />



        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>





